extends ../layout

block content
  form(method='POST')
    legend Sign In
    input(type='hidden', name='_csrf', value=token)
    .col-sm-8.col-sm-offset-2
      if secrets.localAuth
        .form-group.pull-right
          label.control-label(style="vertical-align: bottom;") Don't have an account? 
          a.btn.btn-primary.btn-sm(href='/signup', style="margin-left: 10px")
            i.fa.fa-user
            | Create Account
        .form-group
          label.control-label(for='email') Email
          input.form-control(type='text', name='email', id='email', placeholder='Email', autofocus=true required)
        .form-group
          label.control-label(for='password') Password
          input.form-control(type='password', name='password', id='password', placeholder='Password' required)
        .form-group
          button.btn.btn-primary(type='submit')
            i.fa.fa-unlock-alt
            | Login
          a.btn.btn-link(href='/forgot') Forgot your password?
          