extends layout

block content
  .page-header
    h3 Contact Form

  .contact-form
    form.form-horizontal(role='form', method='POST')
      input(type='hidden', name='_csrf', value=token)
      .form-group
        label(class='control-label', for='name') Name
        div
          input.form-control(type='text', name='name', id='name', autofocus=true)
      .form-group
        label(class='control-label', for='email') Email
        div
          input.form-control(type='text', name='email', id='email')
      .form-group
        label(class='control-label', for='message') Body
        div
          textarea.form-control(type='text', name='message', id='message', rows='7')
      .form-group
        div.pull-right
          button.btn.btn-default(type='submit')
            i.fa.fa-mail-forward
            | Send
